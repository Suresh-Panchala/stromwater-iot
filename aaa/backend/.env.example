# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stromwater_db
DB_USER=stromwater_user
DB_PASSWORD=your_secure_password

# MQTT Configuration
MQTT_BROKER_URL=mqtts://your-vps-ip:8883
MQTT_USERNAME=stromwater_mqtt
MQTT_PASSWORD=your_mqtt_password
MQTT_CLIENT_ID=stromwater_backend
MQTT_TOPIC=devices/+/data

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_change_this
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_key_change_this
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# Alert Configuration
ENABLE_EMAIL_ALERTS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_TO=admin@example.com

ENABLE_TELEGRAM_ALERTS=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# SSL/TLS for MQTT
MQTT_CA_CERT_PATH=/path/to/ca.crt
MQTT_CLIENT_CERT_PATH=/path/to/client.crt
MQTT_CLIENT_KEY_PATH=/path/to/client.key
